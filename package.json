{
  "name": "react-timepicker-arc",
  "version": "1.0.0",
  "type": "module",
  "description": "A flexible and customizable React TimePicker component with multiple format support",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./no-css": {
      "import": "./dist/index.no-css.esm.js"
    },
    "./dist/TimePicker.css": "./dist/TimePicker.css"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "react",
    "timepicker",
    "time",
    "picker",
    "component",
    "typescript",
    "ui"
  ],
  "author": "Hridoy Haque <hridoyhaque01@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hridoyhaque01/react-timepicker-arc.git"
  },
  "bugs": {
    "url": "https://github.com/hridoyhaque01/react-timepicker-arc/issues"
  },
  "homepage": "https://github.com/hridoyhaque01/react-timepicker-arc#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.1",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-postcss": "^4.0.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  }
}
